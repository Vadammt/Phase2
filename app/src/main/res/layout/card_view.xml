<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:elevation="10dp"
    android:id="@+id/card_view"
    android:layout_gravity="top"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardCornerRadius="1dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPaddingLeft="5dp"
    app:contentPaddingTop="2dp"
    app:theme="@style/Base.AlertDialog.AppCompat.Light"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:elevation="1dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingLeft="1dp"
        android:paddingTop="1dp">

        <LinearLayout
            android:id="@+id/top_layout_title"
            android:layout_height="28dp"
            android:layout_width="match_parent"
            android:paddingBottom="4dp"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:paddingTop="4dp">

            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/card_icon"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/text_content"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textAlignment="textStart"
                android:textColor="@color/cyan"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chart_container"
            android:layout_below="@id/top_layout_title"
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:orientation="vertical"></LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>